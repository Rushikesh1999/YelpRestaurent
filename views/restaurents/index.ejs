<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To YelpRestaurent!</h1>
            <p>View our handpicked-restaurents from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/restaurents/new">Add new restaurents</a>
            </p>
        </div>
    </header>


     
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% restaurents.forEach(function(restaurent){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img style: width=250px height= 250px src="<%= restaurent.image %>">
                <div class="caption">
                    <h4><%= restaurent.name %></h4>
                </div>
                <p>
                    <a href="/restaurents/<%= restaurent._id %>" class="btn btn-primary">More Info</a>
                </p>
            </div>
        </div>
        <% }) %>
    </div>
</div>

<% include ../partials/footer %>