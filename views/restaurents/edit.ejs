<% include ../partials/header %>
<div class="container">
    <h1 style="text-align: center">Edit <%=restaurent.name%></h1>
    <div class="row">
        
        <div style="width: 30%;margin: 25px auto;">
            <form action="/restaurents/<%= restaurent._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="restaurent[name]" value="<%= restaurent.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="restaurent[image]" value="<%= restaurent.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="restaurent[description]" value="<%= restaurent.description%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-default btn-block">Submit</button>
                </div>
            
            </form>
            
        
        </div>
    </div>
</div>
<% include ../partials/footer %>